<script type='text/javascript'>
$(function() {
  // These settings override the defaults set in application.coffee. You can do this on a per dashboard basis.
  Dashing.numColumns = 16
  Dashing.widget_margins = [6, 6]
  Dashing.widget_base_dimensions = [67, 67] 
  // 1024*580
  });
  
var sheet = document.createElement('style')

function updateOpacity() {
  var h = new Date().getHours() + (new Date().getMinutes()/60);
  var o = Math.max(.2,Math.min(1, Math.sin((h-1)*Math.PI/12+Math.PI*1.5)*2+.5));
  sheet.innerHTML = ".widget {opacity: "+o+";}";
}

setInterval(updateOpacity, 30000);
updateOpacity();
document.body.appendChild(sheet);
</script>
	
